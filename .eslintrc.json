{
	"extends": [
		"wikimedia",
		"wikimedia/jquery"
	],
	"parserOptions": {
		"ecmaVersion": 8
	},
	"overrides": [
		{
			"files": "Gruntfile.js",
			"env":  {
				"commonjs": true
			}
		},
		{
			"files": "static/ticketform/common.js",
			"rules": {
				"no-unused-vars": "off"
			}
		},
		{
			"files": "static/get-images.js",
			"rules": {
				"no-unused-vars": "off"
			}
		}
	],
	"env": {
		"browser": true,
		"es6": true
	},
	"rules": {
		"arrow-parens": ["error", "as-needed", {
			"requireForBlockBody": true
		}],
		"no-const-assign": "error",
		"one-const": "off",
		"one-var": "off",
		"no-use-before-define": "off",
		"no-loop-func": "off"
	},
	"globals": {
		"getTopicById": true,
		"getSubtopicById": true,
		"cookies": true
	}
}
